{% block body %}
    <div class="container">   
        <div class="row d-sm-flex justify-content-center align-items-end">
            <div class="col-2">
                <img src="https://lonalo-v.azureedge.net/-/media/domain/brands/eum_logo_dark_2lines.png" alt="" class="img-fluid" style="width:100px; height:100px;">
            </div>
            <div class="col">
                <h1 >Tirage du {{ data[0]['drawn_at'] | format_datetime('full', 'none', locale='fr') }}</h1>
                <div class="row">
