                                <div class="col">       
                                    {% if resultats.type == "number"  %}
                                        <a  class="btn btn-primary btn-rounded m-1">{{ resultats.value }}</a>
                                    {% else %}
                                        <a  class="btn btn-outline-warning btn-rounded m-1">{{ resultats.value }}</a>
                                    {% endif %}
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                    <div class="col-4">
                        <p class="d-flex"><span class="text-primary">My Million:  </span> EJ 
                            <span class="d-flex text-small">
                                {% for resultats in data[0]['results'] %}
                                    <span class="d-flex">{{ resultats.value}}</span>
                                {% endfor %}
                            </span>
                        </p>
                    </div>
                </div>
            </div>
        </div>
